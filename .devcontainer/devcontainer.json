{
  "name": "Danbooru",
  "dockerComposeFile": ["../docker-compose.dev.yaml"],
  "service": "devcontainer",
  "workspaceFolder": "/danbooru",
  "forwardPorts": [3000, 3035],
  "portsAttributes": {
    "3000": {
      "label": "Danbooru",
      "onAutoForward": "openPreview"
    },
    "3035": {
      "label": "Webpack Dev Server",
      "onAutoForward": "silent"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "remoteEnv": {
    "DANBOORU_DIR": "${localWorkspaceFolder}",
    "DEVCONTAINER": "true"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "Shopify.ruby-lsp",
        "KoichiSasada.vscode-rdbg",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig"
      ]
    }
  },
  "secrets": {
    "DANBOORU_PIXIV_PHPSESSID": {
      "description": "Your Pixiv `PHPSESSID` cookie. Required for Pixiv upload support."
    },
    "DANBOORU_TWITTER_AUTH_TOKEN": {
      "description": "Your Twitter `auth_token` cookie. Required for Twitter upload support."
    },
    "DANBOORU_TWITTER_CSRF_TOKEN": {
      "description": "Your Twitter `ct0` cookie. Required for Twitter upload support."
    }
  }
}
