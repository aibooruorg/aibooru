<%= edit_form_for(forum_post, namespace: "forum_post_#{forum_post.id}") do |f| %>
  <%= f.input :body, label: false, as: :dtext %>

  <%= f.button :submit, "Submit", class: "button-primary" %>
  <%= dtext_preview_button "forum_post_body", class: "button-outline-primary", media_embeds: forum_post.dtext_body.media_embeds %>
<% end %>
