<h2>Mod Actions</h2>

<table class="striped w-full">
  <thead>
    <tr>
      <th>Moderator</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @dashboard.mod_actions.each do |mod_action| %>
      <tr>
        <td><%= link_to_user mod_action.creator %></td>
        <td>
          <div class="prose">
            <%= mod_action.dtext_description.format_text %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "View all actions", mod_actions_path %></p>
