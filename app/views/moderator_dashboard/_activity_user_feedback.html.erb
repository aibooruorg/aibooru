<h2>User Feedback</h2>

<table class="striped w-full">
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @dashboard.user_feedbacks.each do |record| %>
      <tr class="feedback-category-<%= record.category %>">
        <td><%= link_to_user(record.user) %></td>
        <td>
          <div class="prose">
            <%= record.dtext_body.format_text %>
          </div>
        </td>
        <td><%= time_ago_in_words_tagged(record.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
